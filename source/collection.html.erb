<% content_for :metas do %>
    <title><%= data.pages.collection.title %> | <%= data.settings.main.site_name %></title>
    <meta name="description" content=<%= data.pages.collection.description %> />
<% end %>

<section class="page-title page-title-4 bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="uppercase mb0"><%= data.pages.collection.title %></h3>
            </div>
            <div class="col-md-6 text-right">
                <ol class="breadcrumb breadcrumb-2">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active"><%= data.pages.collection.title %></li>
                </ol>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>

<section class="pt100 pb100 pt-xs-80 pb-xs-80">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
        <%= markdown data.pages.collection.content %>
      </div>
    </div><!--end of row-->
  </div><!--end of container-->
</section>

<section class="pt40 pb0">
    <div class="container">
        <div class="row">
            <% blog('products').articles.reverse.each do |prod| %>
                <div class="col-sm-6">
                    <div class="image-tile inner-title title-center text-center">
                        <a href="<%= prod.url.chomp('index.html').chomp('.html').chomp('/') %>">
                            <%= image_tag(prod.data.image || "/img/shop.jpg", alt: prod.data.title) %>
                            <div class="title">
                                <h4 class="uppercase mb0"><%= prod.title %></h4>
                            </div>
                        </a>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>