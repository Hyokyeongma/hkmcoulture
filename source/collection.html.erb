<% content_for :metas do %>
    <title><%= data.pages.collection.title %> | <%= data.settings.main.site_name %></title>
    <meta name="description" content=<%= data.pages.collection.description %> />
<% end %>

<section class="page-title page-title-4 bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="uppercase mb0"><%= data.pages.collection.title %></h3>
            </div>
            <div class="col-md-6 text-right">
                <ol class="breadcrumb breadcrumb-2">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active"><%= data.pages.collection.title %></li>
                </ol>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>

<div class="container">
    <!--end of row-->
    <div class="row masonry-loader fadeOut">
        <div class="col-sm-12 text-center">
            <div class="spinner"></div>
        </div>
    </div>
    <div class="row masonry masonryFlyIn fadeIn" style="position: relative; height: 2062.5px;">
        <% blog('products').articles.each do |prod| %>
            <div class="col-sm-6 masonry-item project fadeIn" data-filter="People" style="position: absolute; left: 0px; top: 0px;">
                <div class="image-tile inner-title hover-reveal text-center">
                    <a href="<%= prod.url %>">
                        <%= image_tag(prod.data.image || "/img/shop.jpg", alt: prod.data.title) %>
                        <div class="title">
                            <h5 class="uppercase mb0"><%= prod.title %></h5>
                        </div>
                    </a>
                </div>
            </div>
        <% end %>
    </div>
    <!--end of row-->
</div>