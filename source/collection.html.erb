<% content_for :metas do %>
    <title><%= data.pages.collection.title %> | <%= data.settings.main.site_name %></title>
    <meta name="description" content=<%= data.pages.collection.description %> />
<% end %>

<section class="pt-xs-80 pb-xs-80">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
        <h3>CAVE WALL TO TOUCHPAD</h3>
        <%= markdown data.pages.collection.content %>
      </div>
    </div><!--end of row-->
  </div><!--end of container-->
</section>

<section class="pb0">
    <div class="container">
        <div class="row">
            <% blog('products').articles.reverse.each do |prod| %>
                <div class="col-sm-4">
                    <div class="image-tile inner-title title-center text-center">
                        <a href="<%= prod.url.chomp('index.html').chomp('.html').chomp('/') %>">
                            <%= image_tag(prod.data.image || "/img/shop.jpg", alt: prod.data.title) %>
                            <div class="title">
                                <h4 class="uppercase mb0"><%= prod.title %></h4>
                            </div>
                        </a>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>

<% content_for :scripts do %>
    <script>
        $(document).ready(function() {
            $("#toggle").click(function() {
                var elem = $("#toggle").text();
                if (elem == "Read More") {
                //Stuff to do when btn is in the read more state
                $("#toggle").text("Read Less");
                $("#text").slideDown();
                } else {
                //Stuff to do when btn is in the read less state
                $("#toggle").text("Read More");
                $("#text").slideUp();
                }
            });
        });
    </script>
<% end %>