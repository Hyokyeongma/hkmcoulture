<!doctype html>
<html lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <% if yield_content :metas %>
            <%= yield_content :metas %>
        <% else %>
            <title>HKMCOULTURE</title>
        <% end %>
        
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href='https://fonts.googleapis.com/css?family=Lato:300,400%7CRaleway:100,400,300,500,600,700%7COpen+Sans:400,500,600' rel='stylesheet' type='text/css'>

        <%= stylesheet_link_tag "bootstrap"; %>
        <%= stylesheet_link_tag "themify-icons"; %>
        <%= stylesheet_link_tag "flexslider"; %>
        <%= stylesheet_link_tag "lightbox.min"; %>
        <%= stylesheet_link_tag "ytplayer"; %>
        <%= stylesheet_link_tag "theme-gunmetal"; %>
        <%= stylesheet_link_tag "custom"; %>
        
    </head>
    <body class="scroll-assist">
        <%= partial "layouts/partials/nav" %>

        <% content_for :metas do %>
            <title><%= current_page.data.title %> | <%= data.settings.main.site_name %></title>
        <% end %>

        

        <section class="image-square left">
            <div class="col-md-6 image">
                <div class="background-image-holder fadeIn" style="background: url('<%= current_page.data.image %>');">
                    <img alt="image" class="background-image" src="<%= current_page.data.image %>" style="display: none;">
                </div>
            </div>
            <div class="col-md-6 col-md-offset-1 content">
                <h3><%= current_page.data.title %></h3>
                <p class="mb0">
                    <%= yield %>
                </p>
            </div>
        </section>


        <div class="container">
            <div class="product-single">
                <div class="row mb24 mb-xs-48">
                    <div class="col-md-5 col-sm-6">
                        <div class="image-slider slider-thumb-controls controls-inside">
                            <span class="label">Sale</span>
                            
                        <div class="flex-viewport" style="overflow: hidden; position: relative;"><ul class="slides" style="width: 1000%; transition-duration: 0s; transform: translate3d(-458px, 0px, 0px);"><li data-thumb="img/shop-product-4_2.jpg" class="clone" aria-hidden="true" style="width: 458px; float: left; display: block;">
                                    <img alt="Image" src="img/shop-product-4_2.jpg" draggable="false">
                                </li>
                                <li data-thumb="img/shop-product-4.jpg" class="flex-active-slide" style="width: 458px; float: left; display: block;">
                                    <img alt="Image" src="img/shop-product-4.jpg" draggable="false">
                                </li>
                                <li data-thumb="img/shop-product-4_1.jpg" class="" style="width: 458px; float: left; display: block;">
                                    <img alt="Image" src="img/shop-product-4_1.jpg" draggable="false">
                                </li>
                                <li data-thumb="img/shop-product-4_2.jpg" style="width: 458px; float: left; display: block;" class="">
                                    <img alt="Image" src="img/shop-product-4_2.jpg" draggable="false">
                                </li>
                            <li data-thumb="img/shop-product-4.jpg" class="clone" aria-hidden="true" style="width: 458px; float: left; display: block;">
                                    <img alt="Image" src="img/shop-product-4.jpg" draggable="false">
                                </li></ul></div><ol class="flex-control-nav flex-control-thumbs"><li><img src="img/shop-product-4.jpg" class="flex-active" draggable="false"></li><li><img src="img/shop-product-4_1.jpg" draggable="false" class=""></li><li><img src="img/shop-product-4_2.jpg" draggable="false" class=""></li></ol><ul class="flex-direction-nav"><li><a class="flex-prev" href="#">Previous</a></li><li><a class="flex-next" href="#">Next</a></li></ul></div>
                        <!--end of image slider-->
                    </div>
                    <div class="col-md-5 col-md-offset-1 col-sm-6">
                        <div class="description">
                            <h4 class="uppercase"><%= current_page.data.title %></h4>
                            <h3 class="uppercase">Description</h3>
                            <hr class="mb48 mb-xs-24">
                            <%= yield %>
                        </div>
                    </div>
                </div>
                <!--end of row-->
            </div>
            <!--end of product single-->
        </div>


        <%= partial "layouts/partials/footer" %>
        
        <%= javascript_include_tag "site" %>

    </body>