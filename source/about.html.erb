<% content_for :metas do %>
    <title><%= data.pages.about.title %> | <%= data.settings.main.site_name %></title>
    <meta name="description" content=<%= data.pages.about.description %> />
<% end %>

<section class="page-title page-title-4 bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="uppercase mb0"><%= data.pages.about.title %></h3>
            </div>
            <div class="col-md-6 text-right">
                <ol class="breadcrumb breadcrumb-2">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active"><%= data.pages.about.title %></li>
                </ol>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>


<section class="pt100 pb100 pt-xs-80 pb-xs-80">
  <div class="container">
    <div class="row">
      <div class="row mb80 mb-xs-24">
          <div class="col-sm-12 text-center">
              <img alt="Image" src="<%= data.pages.about.image %>">
          </div>
      </div>

      <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
        <%= markdown data.pages.about.content %>
      </div>
    </div><!--end of row-->
  </div><!--end of container-->
</section>